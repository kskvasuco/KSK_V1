{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 30
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "MONGO_URI": "@mongo_uri",
        "SESSION_SECRET": "@session_secret",
        "ADMIN_USER": "@admin_user",
        "ADMIN_PASS": "@admin_pass"
    }
}